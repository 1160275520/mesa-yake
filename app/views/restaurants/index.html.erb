<div class="container bg-dark">
    <div class="row">
        <div class="col-12 pt-2">
            <form>
                <div class="form-group">
                    <input class="form-control" name="query" placeholder="Where are you looking for?"/>
                </div>
            </form>
            <% @restaurants.each do |restaurant|  %>
             <div style="background: url(<%= restaurant.img %>) no-repeat center center;
                background-size: auto auto;
            background-size: cover;">
                 
             
             <div class="jumbotron" align="center" style="background:rgba(0,0,0,.26)">
              <h1 class="display-4" id="title"><%= restaurant.name %></h1>
               <h4 class="desc"><%= restaurant.description %></h4>
               <a href="/restaurants/<%= restaurant.id %>/menu"><button class="ctrl-standard typ-subhed fx-sliderIn">Order Food</button></a>
             </div>
            </div>
            <% end %>
        </div>
    </div>
</div>